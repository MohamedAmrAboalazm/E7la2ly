<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Client.ClientRegisterationActivity"
    android:orientation="vertical"
    android:background="#2188D6"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/logo"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/app_logo"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Client Name">


            <EditText
                android:id="@+id/client_name_reg_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textSize="20sp"
                android:textColor="#000000"
                />



        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email">


            <EditText
                android:id="@+id/client_email_reg_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textSize="20sp"
                android:textColor="#000000"
                />




        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:passwordToggleEnabled="true">


            <EditText
                android:id="@+id/client_password_reg_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="20sp"
                android:textColor="#000000"
                />



        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PhoneNumber">


            <EditText
                android:id="@+id/client_phone_reg_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLines="1"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="30dp"
                />



        </com.google.android.material.textfield.TextInputLayout>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_btn"
            android:text="Register"
            android:textColor="#000000"
            android:background = "@drawable/roundedbutton"
            android:layout_margin="10dp"
            />



    </LinearLayout>




</LinearLayout>
